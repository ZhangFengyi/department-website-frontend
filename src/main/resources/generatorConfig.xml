<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
    <!--配置数据库连接的位置-->
    <properties url="file:///opt/BaoHao/department_website.properties"/>

    <context id="departmentWebsite" targetRuntime="MyBatis3">
        <!--除去时间戳-->
        <commentGenerator>
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="${rdb.driver}"
                        connectionURL="${rdb.url}"
                        userId="${rdb.user}"
                        password="${rdb.password}">
        </jdbcConnection>

        <!-- 用来除去时间信息的，这在配合类似subversion的代码管理工具时使用很有效，因为可以减少没有必要的注释迁入 -->
        <!--<commentGenerator>-->
            <!--<property name="suppressDate" value="true"/>-->
        <!--</commentGenerator>-->

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.baohao.departmentwebsitefrontend.model" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="com.baohao.departmentwebsitefrontend.dao" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.baohao.departmentwebsitefrontend.dao" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="user_info"></table>
        <table tableName="manager_info"></table>
        <table tableName="fn_info"></table>
        <table tableName="sn_info"></table>
        <table tableName="article_list"></table>
        <table tableName="image_info"></table>
        <table tableName="video_info"></table>
        <table tableName="visit_info"></table>
        <table tableName="image_group_info"></table>
        <table tableName="video_group_inf0"></table>
        <table tableName="article"></table>


    </context>


</generatorConfiguration>